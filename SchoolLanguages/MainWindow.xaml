<Window x:Class="SchoolLanguages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLanguages"
        mc:Ignorable="d"
        Title="SchoolLanguages" Height="400" Width="800" WindowStartupLocation="CenterScreen" Background="GhostWhite">
    <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#E7FABF" CornerRadius="10" Padding="20" Margin="0,0,0,20" Grid.ColumnSpan="2">
                <TextBlock Style="{DynamicResource TextBlock}" Text="Добро пожаловать в языковую школу Learn!" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black"/>
            </Border>
            <StackPanel
VerticalAlignment="Top" HorizontalAlignment="Center" Width="250" Margin="0,98,0,0" Grid.Column="1" Grid.RowSpan="2">
                <Button  Content="Услуги " Style="{DynamicResource Button}"/>
                <Button Content="Товары" Style="{DynamicResource Button}"/>
                <Button Content="Записи" Style="{DynamicResource Button}"/>
                <Button Content="Авторизация" Style="{DynamicResource Button}" Click="LoginButton_Click"/>
            </StackPanel>
        </Grid>
</Window>
