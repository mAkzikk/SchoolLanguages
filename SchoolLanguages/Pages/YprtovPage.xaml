<Page x:Class="SchoolLanguages.Pages.YprtovPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLanguages.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YprtovPage" Background="{StaticResource BaseBrush}">

    <Grid Margin="10">
     <StackPanel>
        <TextBlock Text="Наименование"/>
        <TextBox x:Name="NameTextBox"/>

        <TextBlock Text="Категория"/>
        <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="Название" SelectedValuePath="Id_категории_товара"/>

        <TextBlock Text="Стоимость"/>
        <TextBox x:Name="PriceTextBox"/>

        <TextBlock Text="Характеристика"/>
        <TextBox x:Name="CharTextBox" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Описание"/>
        <TextBox x:Name="DescTextBox" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Вес"/>
        <TextBox x:Name="WeightTextBox"/>

        <TextBlock Text="Ширина"/>
        <TextBox x:Name="WidthTextBox"/>

        <TextBlock Text="Высота"/>
        <TextBox x:Name="HeightTextBox"/>

        <TextBlock Text="Длина"/>
        <TextBox x:Name="LengthTextBox"/>

        <TextBlock Text="Производитель"/>
        <TextBox x:Name="ManufacturerTextBox"/>

        <TextBlock Text="Фото (ссылка или путь)"/>
        <TextBox x:Name="PhotoTextBox"/>

        <TextBlock Text="ID склада (необязательно)"/>
        <TextBox x:Name="WarehouseIdTextBox"/>

        <TextBlock Text="Количество (необязательно)"/>
        <TextBox x:Name="QuantityTextBox"/>
    </StackPanel>
    </Grid>
</Page>
