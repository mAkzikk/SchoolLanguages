<Page x:Class="SchoolLanguages.Pages.TovaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLanguages.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TovaryPage" Background="{StaticResource BaseBrush}">

    <Grid>
        <TextBlock Text = "Товары" FontSize="24" Margin = "10"/>
        <StackPanel Margin = "10">
            <TextBlock Text = "Название товара:" />
            <TextBox Margin = "0,5"/>
            <TextBlock Text = "Категория:" />
            <TextBox Margin = "0,5"/>
            <CheckBox Content = "Актуальность" Margin = "0,5"/>
            <Button Content = "История заказов" Margin = "0,5"/>
        </StackPanel>
    </Grid>
</Page>
