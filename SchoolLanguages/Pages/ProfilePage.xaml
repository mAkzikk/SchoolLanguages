<Page x:Class="SchoolLanguages.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLanguages.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage" Background="{StaticResource BaseBrush}">

    <Grid>
        <StackPanel>
            <TextBlock Text="Профиль клиента" Style="{DynamicResource TextBlock}" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Фамилия:" Style="{DynamicResource TextBlock}" FontWeight="Bold"/>
            <TextBlock x:Name="LastNameText" Style="{DynamicResource TextBlock}" Margin="0,0,0,10"/>
            <TextBlock Text="Имя:" Style="{DynamicResource TextBlock}" FontWeight="Bold"/>
            <TextBlock x:Name="FirstNameText" Style="{DynamicResource TextBlock}" Margin="0,0,0,10"/>
            <TextBlock Style="{DynamicResource TextBlock}" Text="Отчество:" FontWeight="Bold"/>
            <TextBlock Style="{DynamicResource TextBlock}" x:Name="MiddleNameText" Margin="0,0,0,10"/>
            <TextBlock Style="{DynamicResource TextBlock}" Text="Пол:" FontWeight="Bold"/>
            <TextBlock Style="{DynamicResource TextBlock}" x:Name="GenderText" Margin="0,0,0,10"/>
            <TextBlock Style="{DynamicResource TextBlock}" Text="Телефон:" FontWeight="Bold"/>
            <TextBlock Style="{DynamicResource TextBlock}" x:Name="PhoneText" Margin="0,0,0,10"/>
            <TextBlock Style="{DynamicResource TextBlock}" Text="Дата рождения:" FontWeight="Bold"/>
            <TextBlock Style="{DynamicResource TextBlock}" x:Name="BirthDateText" Margin="0,0,0,10"/>
            <TextBlock Style="{DynamicResource TextBlock}" Text="Email:" FontWeight="Bold"/>
            <TextBlock Style="{DynamicResource TextBlock}" x:Name="EmailText" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
